<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="10"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="10dp"
        android:background="@color/colorBack"
        android:layout_weight="2"
        android:weightSum="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_weight="2">
            <TextView
                android:id="@+id/word_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textColor="@color/colorBlue"
                android:gravity="center"/>
            <TextView
                android:id="@+id/word_voice"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textColor="@color/colorBlue"
                android:gravity="center"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:src="@drawable/voice"
                android:layout_height="30dp"
                />
        </LinearLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/colorBlack" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/word_first_expression"
                android:textSize="15dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:id="@+id/word_second_expression"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_margin="5dp"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="短语"/>
    <LinearLayout
        android:background="@color/colorBack"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        android:layout_weight="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="2">
            <TextView
                android:id="@+id/first_sentence_out"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="18dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/first_sentence_in"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="18dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/colorBlack" />
        <LinearLayout
            android:id="@+id/second_line"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:id="@+id/second_sentence_out"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="18dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/second_sentence_in"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="18dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/next_word"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:background="@color/colorBlue"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="下一个"
        android:textSize="20dp"
        android:textColor="@color/colorBack"
        android:layout_gravity="center"/>

</LinearLayout>